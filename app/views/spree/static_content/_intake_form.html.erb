<div class="contact-form">
  <%= form_for @intake_info, :url => { :controller => :static_content, :action => :create } do |form| %>
      <%= render "spree/shared/error_messages", :target => @intake_info %>
      <div>
        <h3>Please Enter Your Information Below:</h3>
        <p>Fields marked with * are required.</p>
      </div>

    <div class="row">
      <div class="four columns tar inline"><span>Client First Name*</span></div>
      <div class="six columns">
        <%= form.text_field :client_first_name %>
      </div>
    </div>

    <div class="row">
      <div class="four columns tar inline"><span>Client Last Name*</span></div>
      <div class="six columns">
        <%= form.text_field :client_last_name %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>Contact First Name</span></div>
      <div class="six columns">
        <%= form.text_field :contact_first_name %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>Contact Last Name</span></div>
      <div class="six columns">
        <%= form.text_field :contact_last_name %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>What is Your Email Address?*</span></div>
      <div class="six columns">
        <%= form.email_field :email %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>What is Your Telephone Number?*</span></div>
      <div class="six columns">
        <%= form.telephone_field :telephone %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>Reason for Seeking Services?*</span></div>
      <div class="six columns">
        <%= form.text_area :reason, :rows => 5 %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>Date of Birth?*</span></div>
      <div class="six columns">
        <%= form.date_select :dob, :end_year => Time.now.year - 95 %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>Street Address:</span></div>
      <div class="six columns">
        <%= form.text_field :address %>
      </div>
    </div>

    <div class="row">
      <div class="four columns tar inline"><span>City</span></div>
      <div class="six columns">
        <%= form.text_field :city %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>State</span></div>
      <div class="six columns">
        <%= form.text_field :state %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>Zip Code</span></div>
      <div class="six columns">
        <%= form.text_field :zip %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>Country</span></div>
      <div class="six columns">
        <%= form.text_field :country %>
      </div>
    </div>
            
    <div class="row">
      <div class="four columns tar inline"><span>Best Time to Contact</span></div>
      <div class="six columns">
        <%= form.text_field :best_time %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns tar inline"><span>How Did You Hear About Us?</span></div>
      <div class="six columns">
        <%= form.text_field :referral %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns5 tar inline"></div>
      <div class="six columns5">
        <%= recaptcha_tags :public_key => "6LeDndcSAAAAAMW6WbhripXwgwdNEmooLh8Um-1U" %>
      </div>
    </div>
    
    <div class="row">
      <div class="four columns5 tar inline"></div>
      <div class="six columns5">
        <%= form.submit "Send" %>
      </div>
    </div>
  <% end %>
</div>