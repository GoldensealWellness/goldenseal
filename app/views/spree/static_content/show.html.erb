<% content_for :head do -%>
  <%- if @page.meta_title.present? -%>
    <meta name="title" content="<%=@page.meta_title%>">
  <%- else -%>
    <meta name="title" content="<%=@page.title%>">
  <%- end -%>
  <meta name="keywords" content="<%=@page.meta_keywords%>">
  <meta name="description" content="<%=@page.meta_description%>">
<% end -%>

<% content_for :sidebar do %>
  <div>
    <% if "products" == @current_controller && @taxon %>
      <%= render :partial => "spree/shared/filters" %>
    <% else %>
      <%= render :partial => "spree/shared/taxonomies" %>
    <% end %>
  </div>
<% end %>

<h1><%= @page.title %></h1>
<div id="page_content">
  <%= raw @page.body %>
</div>
  <% if @page.title.downcase == "about"%>
    <%= render :partial => "spree/static_content/intake_form" %>
  <% end %>
  <% if @page.title.downcase == "dr. parkes' corner"%>
    <%= render :partial => "spree/static_content/intake_form" %>
  <% end %>
  <% if @page.title.downcase == "contact"%>
    <%= render :partial => "spree/static_content/contact_form" %>
  <% end %>
</div>